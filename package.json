{
  "name": "facemouse",
  "version": "0.3.0-alpha",
  "description": "A program that controls your mouse using your webcam and face tracking",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "npm rebuild --runtime=electron --target=1.1.3 --disturl=https://atom.io/download/atom-shell --abi=48",
    "dist": "electron-builder --ia32",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.facemouse.app"
  },
  "repository": "https://github.com/jmlag/facemouse",
  "keywords": [
    "face",
    "tracking",
    "mouse"
  ],
  "author": "jmlag",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "~1.6.2",
    "electron-builder": "^19.19.1"
  },
  "dependencies": {
    "electron-settings": "^3.1.1",
    "robotjs": "^0.4.7"
  }
}
